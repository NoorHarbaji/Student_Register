@model Student_Register.Models.Record

@{
    ViewData["Title"] = "Details";
}

<section class="bg-primary bg-gradient text-light p-5">
    <div class="container">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Grade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Grade)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Student)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Student.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Course)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Course.ID)
            </dd>
        </dl>
    </div>
    </section>
    <section class="bg-primary bg-gradient text-light align-items-center p-5">
        <div class="container">
            <div class="d-md-flex
             align-items-center">
                <a class="btn btn-danger bg-gradient mb-3 mb-md-0" asp-action="Index">Back</a>
                <a class="btn btn-danger bg-gradient mb-3 mb-md-0" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
            </div>
        </div>
    </section>
