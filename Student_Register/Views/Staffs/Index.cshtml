@model IEnumerable<Student_Register.Models.Staff>

@{
    ViewData["Title"] = "Index";
}
<section class="bg-primary bg-gradient text-light p-5">
    <div class="container">
        <div class="d-md-flex
             justify-content-between
             align-items-center">
            <a class="btn btn-danger bg-gradient mb-3 mb-md-0" asp-action="Create">Create New</a>
            <a class="btn btn-danger bg-gradient mb-3 mb-md-0" asp-action="Index">Back</a>
        </div>
    </div>
</section>
<section id="instructors" class="p-5 bg-primary">
    <div class="container">
        <h2 class="text-center text-white">Our Instructors</h2>
        <p class="lead text-center text-white mb-5">
            Our instructors all have 5+ years working as a web developer in the
            industry
        </p>
        <div class="row g-4 justify-content-between
             align-items-center">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <img src="https://randomuser.me/api/portraits/men/11.jpg"
                                 class="rounded-circle mb-3"
                                 alt="" />
                            <h3 class="card-title mb-3"> @Html.DisplayFor(modelItem => item.FirstName)</h3>
                            <p class="card-text">
                                Lorem ipsum dolor sit amet consectetur adipisicing elit.
                                Assumenda accusamus nobis sed cupiditate iusto? Quibusdam.
                            </p>
                            <div class="row g-4 justify-content-between
                               align-items-center">
                                    <div>
                                    <a class=" bg-gradient" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                                    <a class=" bg-gradient" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                                    <a class=" bg-gradient" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                                    </div>
                                    <div>   
                                    <a href="#"><i class="bi bi-twitter text-dark mx-1"></i></a>
                                    <a href="#"><i class="bi bi-facebook text-dark mx-1"></i></a>
                                    <a href="#"><i class="bi bi-linkedin text-dark mx-1"></i></a>
                                    <a href="#"><i class="bi bi-instagram text-dark mx-1"></i></a>
                                        </div>
                                </div>
                                </div>
                            </div>
                        </div>
               
            }

        </div>
         
    </div>
    </section>