@model IEnumerable<Student_Register.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<section class="bg-primary bg-gradient text-light p-5">
    <div class="container">
        <div class="d-md-flex
             justify-content-between
             align-items-center">
            <form asp-controller="Students" asp-action="Index">
                <div class="input-group news-input">
                    <input type="text" class="form-control  rounded form-control-lg" aria-label="Search"
                           aria-describedby="search-addon" name="SearchString" />
                    <!--<input type="submit" class="btn btn-danger mb-3 mb-md-0" value="Search" />-->
                    <span class="input-group-text border-0" id="search-addon"> 
                        <i class="fas fa-search"></i>
                    </span>
                </div>
            </form>
            <a class="btn btn-danger bg-gradient mb-3 mb-md-0" asp-action="Create">Create New</a>
            <a class="btn btn-danger bg-gradient mb-3 mb-md-0" asp-action="Index">Back</a>
        </div>
    </div>
</section>
<section class="p-5 text-light text-center text-sm-start">
    <div class="container">
        <div class="table-responsive">
            <table class="table text-dark align-middle table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                <a class="btn btn-danger bg-gradient" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                                <a class="btn btn-danger bg-gradient" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                                <a class="btn btn-danger bg-gradient" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
  
